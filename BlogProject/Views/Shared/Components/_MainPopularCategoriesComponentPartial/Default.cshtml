<div class="widget">
    <h2 class="widget-title">Popüler Kategoriler</h2>
    <div class="link-widget">
        <ul>
            @foreach (var category in Model)
            {
                <li>
                    <a href="#">@category.CategoryName <span>(@category.ArticleCount)</span></a>
                </li>
            }
        </ul>
    </div>
</div>