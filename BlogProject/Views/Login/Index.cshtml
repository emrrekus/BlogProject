@model LoginViewModel
@{
    Layout = null;
}



<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    body {
        margin: 0;
        padding: 0;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #6a11cb, #2575fc); /* Mor ve mavi geçişli gradient */
        font-family: Arial, sans-serif;
    }

    .container {
        display: flex;
        width: 90%;
        max-width: 1000px;
        height: 80vh;
        border-radius: 15px;
        box-shadow: 0px 8px 30px rgba(0, 0, 0, 0.3);
        overflow: hidden;
        background: #fff;
        padding: 0px;
    }

    .welcome-section {
        background: linear-gradient(135deg, #6a11cb, #2575fc);
        color: #fff;
        width: 50%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 50px;
        text-align: center;
    }

        .welcome-section h1 {
            font-size: 3.5rem;
            margin-bottom: 20px;
        }

        .welcome-section p {
            font-size: 1.2rem;
            margin-bottom: 30px;
        }

        .welcome-section button {
            background: #fff;
            color: #6a11cb;
            border: none;
            padding: 15px 30px;
            font-size: 1.2rem;
            border-radius: 25px;
            cursor: pointer;
            transition: background 0.3s ease, color 0.3s ease;
        }

            .welcome-section button:hover {
                background: rgba(255, 255, 255, 0.8);
                color: #2575fc;
            }

    .login-form {
        background: #fff;
        width: 50%;
        padding: 50px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .login-form h2 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 2rem;
        }

    .form-control {
        margin-bottom: 20px;
        padding: 15px;
        font-size: 1rem;
    }

    .btn-primary {
        background: #6a11cb;
        border: none;
        width: 100%;
        padding: 15px;
        font-size: 1.2rem;
        transition: background 0.3s ease;
    }

        .btn-primary:hover {
            background: #2575fc;
        }
</style>
<body>
    <div class="container">
        <div class="welcome-section">
            <h1>Merhabalar!</h1>
            <p>Markedia Hoş Geldin.Hesabın yoksa aşağıdak kolay bir şekilde üye olabilirsin.</p>
            <button><a href="Register/Index"></a>Üye Ol</button>
        </div>
        <div class="login-form">
            <h2>Giriş Yap</h2>
            <form method="post">
                <input type="text" asp-for="Username" class="form-control" placeholder="Username" >
                <input type="password" asp-for="Password" class="form-control" placeholder="Şifreniz">
              
                <button  class="btn btn-primary">Giriş Yap</button>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>


   
