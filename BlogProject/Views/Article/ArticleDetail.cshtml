@model Article

@{
    ViewData["Title"] = "ArticleDetail";
    Layout = "~/Views/Shared/_ArticleDetailLayout.cshtml";
}





<body>

    <div id="wrapper">
 

        <section class="section lb m3rem">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                        <div class="page-wrapper">
                            <div class="blog-title-area">
                                

                                <span class="color-yellow"><a href="marketing-category.html" title="">@Model.Category.CategoryName</a></span>

                                <h3>@Model.Title</h3>

                                <div class="blog-meta big-meta">
                                    <small><a href="marketing-single.html" title=""><b>@Model.CreatedDate.ToString("mm-dd-yyyy")</b></a></small>
                                    <small><a href="blog-author.html" title=""><b>@Model.AppUser.Name @Model.AppUser.Surname</b></a></small>
                                    <small><a href="#" title=""><i class="fa fa-eye"></i> <b>@Model.ArticleViewCount</b></a></small>
                                </div><!-- end meta -->

                             
                            </div><!-- end title -->

                            <div class="single-post-media">
                                <img src="@Model.MainImageUrl" alt="" class="img-fluid">
                            </div><!-- end media -->

                            <div class="blog-content">
                                <b> @Model.Detail</b>
                            </div>

                            <div class="blog-title-area">
                                <div class="tag-cloud-single">
                                    <span>Tags</span>
                                    @foreach(var item in Model.Tags)
                                    {
                                        <small><a href="#" title="">@item.TagCloud.Title</a></small>
                                    }
                                   
                                   
                                </div>

                         
                            </div>

                           
                            <hr class="invis1">

                            <div class="custombox authorbox clearfix">
                                <h4 class="small-title">About author</h4>
                                <div class="row">
                                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                        <img src="@Model.AppUser.ImageUrl" alt="" class="img-fluid rounded-circle">
                                    </div><!-- end col -->

                                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
                                        <h4><a href="#">@Model.AppUser.Name @Model.AppUser.Surname</a></h4>
                                        <p>@Model.AppUser.Description</p>

                                      

                                    </div><!-- end col -->
                                </div><!-- end row -->
                            </div><!-- end author-box -->

                            <hr class="invis1">

                      

                            <hr class="invis1">

                            <div class="custombox clearfix">
                                <h4 class="small-title">3 Comments</h4>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="comments-list">
                                            <div class="media">
                                                <a class="media-left" href="#">
                                                    <img src="upload/author.jpg" alt="" class="rounded-circle">
                                                </a>
                                                <div class="media-body">
                                                    <h4 class="media-heading user_name">Amanda Martines <small>5 days ago</small></h4>
                                                    <p>Exercitation photo booth stumptown tote bag Banksy, elit small batch freegan sed. Craft beer elit seitan exercitation, photo booth et 8-bit kale chips proident chillwave deep v laborum. Aliquip veniam delectus, Marfa eiusmod Pinterest in do umami readymade swag. Selfies iPhone Kickstarter, drinking vinegar jean.</p>
                                                    <a href="#" class="btn btn-primary btn-sm">Reply</a>
                                                </div>
                                            </div>
                                            <div class="media">
                                                <a class="media-left" href="#">
                                                    <img src="upload/author_01.jpg" alt="" class="rounded-circle">
                                                </a>
                                                <div class="media-body">

                                                    <h4 class="media-heading user_name">Baltej Singh <small>5 days ago</small></h4>

                                                    <p>Drinking vinegar stumptown yr pop-up artisan sunt. Deep v cliche lomo biodiesel Neutra selfies. Shorts fixie consequat flexitarian four loko tempor duis single-origin coffee. Banksy, elit small.</p>

                                                    <a href="#" class="btn btn-primary btn-sm">Reply</a>
                                                </div>
                                            </div>
                                            <div class="media last-child">
                                                <a class="media-left" href="#">
                                                    <img src="upload/author_02.jpg" alt="" class="rounded-circle">
                                                </a>
                                                <div class="media-body">

                                                    <h4 class="media-heading user_name">Marie Johnson <small>5 days ago</small></h4>
                                                    <p>Kickstarter seitan retro. Drinking vinegar stumptown yr pop-up artisan sunt. Deep v cliche lomo biodiesel Neutra selfies. Shorts fixie consequat flexitarian four loko tempor duis single-origin coffee. Banksy, elit small.</p>

                                                    <a href="#" class="btn btn-primary btn-sm">Reply</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div><!-- end col -->
                                </div><!-- end row -->
                            </div><!-- end custom-box -->

                            <hr class="invis1">

                            <div class="custombox clearfix">
                                <h4 class="small-title">Yorum</h4>
                                <div class="row">
                                    <div class="col-lg-12">
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <!-- Kullanıcı giriş yaptıysa yorum formunu göster -->
                                            <form class="form-wrapper">
                                                <input type="text" class="form-control" placeholder="Your name">
                                                <input type="text" class="form-control" placeholder="Email address">
                                                <input type="text" class="form-control" placeholder="Website">
                                                <textarea class="form-control" placeholder="Your comment"></textarea>
                                                <button type="submit" class="btn btn-primary">Submit Comment</button>
                                            </form>
                                        }
                                        else
                                        {
                                            <!-- Kullanıcı giriş yapmadıysa uyarı göster -->
                                            <div class="alert alert-warning text-center" role="alert">
                                                <h5>Yorum yapabilmek için giriş yapmanız gerekiyor.</h5>
                                                <a href="/Login/Index" class="btn btn-primary mt-2">Giriş Yap</a>
                                                <a href="/Register/Index" class="btn btn-secondary mt-2">Kayıt Ol</a>
                                            </div>
                                        }
                                    </div>
                                </div>

                            </div>
                        </div><!-- end page-wrapper -->
                    </div><!-- end col -->

                    <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
                        <div class="sidebar">
                            @await Html.PartialAsync("~/Views/NewsLetter/AddNewsLetter.cshtml")
                            <br />
                            @await Component.InvokeAsync("_MainRecentPostComponentPartial")
                            @await Component.InvokeAsync("_MainPopularCategoriesComponentPartial")
                        </div><!-- end sidebar -->
                    </div><!-- end col -->
                </div><!-- end row -->
            </div><!-- end container -->
        </section>



        <div class="dmtop">Scroll to Top</div>

    </div><!-- end wrapper -->

</body>


