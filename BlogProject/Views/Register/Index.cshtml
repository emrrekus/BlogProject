@model RegisterViewModel
@{
    Layout = null;
}



<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    body {
        margin: 0;
        padding: 0;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #ff7e5f, #feb47b); /* Turuncu gradient */
        font-family: Arial, sans-serif;
    }

    .container {
        display: flex;
        width: 90%;
        max-width: 1000px;
        height: 80vh;
        border-radius: 15px;
        box-shadow: 0px 8px 30px rgba(0, 0, 0, 0.3);
        overflow: hidden;
        background: #fff;
        padding: 0px;
    }

    .welcome-section {
        background: linear-gradient(135deg, #ff7e5f, #feb47b); /* Turuncu gradient */
        color: #fff;
        width: 50%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 50px;
        text-align: center;
    }

        .welcome-section h1 {
            font-size: 3.5rem;
            margin-bottom: 20px;
        }

        .welcome-section p {
            font-size: 1.2rem;
            margin-bottom: 30px;
        }

        .welcome-section button {
            background: #fff;
            color: #ff7e5f;
            border: none;
            padding: 15px 30px;
            font-size: 1.2rem;
            border-radius: 25px;
            cursor: pointer;
            transition: background 0.3s ease, color 0.3s ease;
        }

            .welcome-section button:hover {
                background: rgba(255, 255, 255, 0.8);
                color: #feb47b;
            }

    .login-form {
        background: #fff;
        width: 50%;
        padding: 50px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .login-form h2 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 2rem;
            color: #ff7e5f;
        }

    .form-control {
        margin-bottom: 20px;
        padding: 15px;
        font-size: 1rem;
        border: 1px solid #feb47b;
    }

    .btn-primary {
        background: #ff7e5f;
        border: none;
        width: 100%;
        padding: 15px;
        font-size: 1.2rem;
        color: #fff;
        transition: background 0.3s ease;
    }

        .btn-primary:hover {
            background: #feb47b;
        }

    .text-primary {
        color: #ff7e5f;
    }
</style>
<body>
    <div class="container">
        <div class="welcome-section">
            <h1>Merhabalar!</h1>
            <p>Markedia Hoş Geldin. Hesabın varsa hesabına girmek için üye girişi yapabilirsin.</p>
            <button><a href="/Login/Index" style="text-decoration: none; color: inherit;">Giriş Yap</a></button>
        </div>
        <div class="login-form">
            <h2>Üye Ol</h2>

            <form method="post">
                <input type="text" asp-for="Name" class="form-control" placeholder="Adınız">
                <input type="text" asp-for="Surname" class="form-control" placeholder="Soyadınız">
                <input type="text" asp-for="Email" class="form-control" placeholder="Mail Adresiniz">
                <input type="text" asp-for="UserName" class="form-control" placeholder="Kullanıcı Adınız">
                <input type="password" asp-for="Password" class="form-control" placeholder="Şifreniz">
                <button class="btn btn-primary">Kayıt Ol</button>
            </form>
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

