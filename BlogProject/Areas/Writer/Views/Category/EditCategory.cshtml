@model Category

@{
    ViewData["Title"] = "EditCategory";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg border-0">
     
        <div class="card-header text-black text-center" style="background: linear-gradient(90deg, #6a11cb, #2575fc);">
            <h2 class="fw-bold mb-1">Kategori Güncelle</h2>
          
        </div>
      
        <div class="card-body">
            <form asp-action="EditCategory" method="post">
              
                <input type="hidden" asp-for="CategoryId" />

               
                <div class="mb-3">
                    <label asp-for="CategoryName" class="form-label fw-bold">Kategori Adı</label>
                    <input type="text" asp-for="CategoryName" class="form-control shadow-sm" placeholder="Kategori adını giriniz..." />
                </div>

                
                <div class="text-center">
                    <button type="submit" class="btn btn-success btn-lg shadow-sm">
                        <i class="bi bi-check-circle"></i> Güncelle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">



