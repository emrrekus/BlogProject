@model List<Comment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<br />
<div class="row">

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Yorum Listesi</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th style="color:black">Yorum Id</th>
                                <th style="color:black">Blog</th>
                                <th style="color:black">Detay</th>
                                <th style="color:black">Tarih</th>
                                <th style="color:black">Sil</th>
                                <th style="color:black">Güncelle</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var comment in Model)
                            {
                                <tr>
                                    <td style="color:black">@comment.CommentId</td>
                                    <td style="color:black">@comment.Article.Title</td>
                                    <td style="color:black">@comment.CommentDetail</td>
                                    <td style="color:black">@comment.CreatedDate.ToShortDateString()</td>
                                    <td><a href="/Writer/Comment/DeleteComment/@comment.CommentId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Writer/Comment/EditComment/@comment.CommentId" class="btn btn-outline-warning">Güncelle</a></td>
                                </tr>

                            }

                        </tbody>
                    </table>

                </div>
            </div>

        </div>

    </div>
</div>


