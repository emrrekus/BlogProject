@model Comment 
@{
    ViewData["Title"] = "EditComment";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<style>
    .profile-header {
        background-color: #4a90e2;
        color: white;
        text-align: center;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        font-family: 'Arial', sans-serif;
    }

        .profile-header h2 {
            margin: 0;
            font-weight: bold;
            font-size: 1.8rem;
        }
</style>

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg border-0">

        <div class="profile-header">
            <h2>Yorum</h2>
        </div>

        <div class="card-body">
            <form method="post">

    
            <input type="hidden" asp-for="CommentId"/>

            <div class="mb-3">
                <label asp-for="CommentDetail" class="form-label fw-bold">İsim</label>
                <input type="text" asp-for="CommentDetail" class="form-control shadow-sm" />
            </div>


            <div class="text-center">
                <button type="submit" class="btn btn-success btn-lg shadow-sm">
                    <i class="bi bi-check-circle"></i> Güncelle
                </button>
            </div>

            <input type="hidden" asp-for="AppUserId" />
            <input type="hidden" asp-for="ArticleId" />
            <input type="hidden" asp-for="CreatedDate" />
            <input type="hidden" asp-for="Status" />
            </form>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">